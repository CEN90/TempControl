property {
	define {
		isHeating = hc_unit.heaterOn;
		isCooling = hc_unit.coolerOn;

        temp_over = controller.currentTemp > threshold_high_const;
        temp_under = controller.currentTemp < threshold_low_const;
	}

    Assertion {
        safety_prop1: !(temp_over && isCooling);
        safety_prop2: !(temp_under && isHeating);
        safety_prop3: !(temp_over || temp_under);
    }
}